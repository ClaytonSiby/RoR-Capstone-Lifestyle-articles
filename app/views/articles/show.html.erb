<%= provide(:title, 'View Article') %>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<div class="single-article">
  <strong>Image:</strong>
  <img src="<%=(url_for(@article.image))%>" />

  <button class='vote btn btn-sm btn-success'>
    <%= up_or_downvote(@article)  %>
  </button>
</div>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
