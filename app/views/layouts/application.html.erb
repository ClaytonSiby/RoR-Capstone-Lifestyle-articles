<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | LSA </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%= render 'layouts/nav' %>
    </header>

    <div class="notifications">
      <% if notice.present? %>
        <div class="notice">
          <p class="text-center text-success"><%= notice %></p>
        </div>
      <% elsif alert.present? %>
        <div class="alert">
          <p class="text-center text-danger"><%= alert %></p>
        </div>
      <% end %>
    </div>

    <main class="container-fluid">
      <%= yield %>
    </main>

    <footer class="footer mt-auto py-3 container-fluid">
      <%= render 'layouts/footer' %>
    </footer>
  </body>
</html>
